<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:local="clr-namespace:SkiaSharpExamples" 
	x:Class="SkiaSharpExamples.RadialProgressOpenGLPage">
	<Grid Padding="8">
		<Grid.GestureRecognizers>
			<TapGestureRecognizer Tapped="Handle_Tapped" />
		</Grid.GestureRecognizers>
		<local:CircularProgressOpenGL 
			x:Name="Progress1"
			Grid.Row="0" Grid.Column="0"
			VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" 
			StartingDegrees="-45" EndingDegrees="270" ProgressColor="Navy" />
		<local:CircularProgressOpenGL 
			x:Name="Progress2"
			Grid.Row="0" Grid.Column="0"
			VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" 
			Margin="24" ProgressThickness="24"
			StartingDegrees="-90" EndingDegrees="315" ProgressColor="Fuchsia" />
		<local:CircularProgressOpenGL 
			x:Name="Progress3"
			Grid.Row="0" Grid.Column="0"
			VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" 
			Margin="60" ProgressThickness="16"
			StartingDegrees="0" EndingDegrees="180" ProgressColor="Green" />			
	</Grid>
</ContentPage>
